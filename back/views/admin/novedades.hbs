<h1 class="text-center pt-5">Sección administrador</h1>
<div class="container" style="margin-top: 50px;">
    <div class="row mb-4">
        <p class="text-end">Hola! {{usuario}} <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesión <i class="fas fa-sign-out-alt"></i> </a></p>
    </div>

    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th class="col">#</th>
                        <th class="col">Titulo</th>

                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th class="">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fa fa-pencil"></i>Editar</a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-danger"><i class="fa fa-trash"></i>Eliminar</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>